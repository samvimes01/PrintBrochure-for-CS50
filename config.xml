<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.printbrochure" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PrintBrochure</name>
    <description>
        Apache Cordova application that calculates pages to print a brochure (format A5 and A6).
    </description>
    <author email="sash@inbox.com" href="http://portfolios.pp.ua">
        Sam Vimes
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*://*.pushbullet.com/*" />
    <allow-navigation href="*://*.portfolios.pp.ua/*" />
    <allow-navigation href="*://*.google.com/*" />
    <allow-navigation href="*://*.facebook.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova.custom.plugins.exitapp" spec="~1.0.0" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
</widget>
